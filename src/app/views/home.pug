extends layouts/main

append head
    title Home - Ward

block content
    div.container-fluid
        div.row
            div.col-md-6.section.search__section
                h1 Product List
                if (error.length > 0) 
                    //- .alert.alert-danger #{error}
                    .alert.alert-warning.alert-dismissible.fade.show(role='alert')
                        strong Oops!
                        |  #{error}
                        button.close(type='button', data-dismiss='alert', aria-label='Close')
                            span(aria-hidden='true') ×
                if (success.length > 0)
                    //- .alert.alert-success #{success}
                    .alert.alert-success.alert-dismissible.fade.show(role='alert')
                        strong Success!
                        |  #{success}
                        button.close(type='button', data-dismiss='alert', aria-label='Close')
                            span(aria-hidden='true') ×
                a.btn.btn-primary(href="/products/new") Add Product
                each product in products
                    h3 #{product.name} as #{product.unit}  #{product.unitq ? "of " + product.unitq : ""}
                    p In Stock: #{product.quantity}
                    p Type: #{product.type}
                    p Unit Price: $#{product.uprice}
                    a.btn.btn-outline-primary.btn-sm(href=`/products/${product._id}`) View Product

