mixin sidebar()
    nav.nav_section.col-2.sidebar-navigation.position-relative#nav
        .sidebar-logo.clearfix.d-flex.justify-content-between.align-items-center
            a(href="/")
                img.float-left(src='/assets/resources/img/cmlogo.svg' alt="CM Logo", title="CM Logo")
            span.h5.font-weight-light.my-2 Cabinet Manager
        ul.panel.panel-default.nav_panel.my-4.list-unstyled
            li
                a(href="/", class= (path==='/products' || path=== '/' ?'active':undefined))
                    i(class="icon ion-md-planet")
                    span.ml-2 Home
            if user && user.role_id <= 1
                li
                    a(href="/orders", class=(path==='/orders'? 'active': undefined))
                        i(class="icon ion-md-cube")
                        span.ml-2 All Orders
                li
                    a(href="/products/new", class=(path==='/products/new'?'active':undefined))
                        i(class="icon ion-md-add-circle")
                        span.ml-2 Add Product
            if user && session.user.role_id < 1
                li
                    a(href="/users/new", class=(path==='/users/new'?'active':undefined))
                        i(class="icon ion-md-person-add")
                        span.ml-2 Add User
            li
                a(href="/orders/history", class=(path==='/orders/history' ? 'active': undefined))
                    i(class="icon ion-md-cube")
                    span.ml-2 Order History
        .state-container
            ul.list-unstyled
                li.header
                if user
                    span.dot.mr-2 
                    | Signed in as #{user.name}
            a.btn.btnPurple.btn-lg.state.text-uppercase#state(href="/logout" role="button") Logout 
