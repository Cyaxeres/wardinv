mixin sidebar()
    nav.nav_section.col-2.sidebar-navigation.position-relative#nav
        .sidebar-logo.clearfix.d-flex.justify-content-between.align-items-center
            img.float-left(src='/assets/resources/img/cmlogo.svg')
            span.h4.font-weight-light Cabinet Manager
        ul.panel.panel-default.nav_panel.my-4.list-unstyled
            li
                a(href="/products")
                    ion-icon(name="medkit")
                    span.ml-2 Products
            li
                a(href="/orders")
                    ion-icon(name="paper")
                    span.ml-2 Orders
            li
                a(href="/products/new")
                    ion-icon(name="add-circle")
                    span.ml-2 Add Product
            li
                a(href="/users/new")
                    ion-icon(name="add-circle")
                    span.ml-2 Add User
        .state-container
            ul.list-unstyled
                li.header
                if session && session.user
                    span.dot.mr-2 
                    | Signed in as #{session.user.name}
            a.btn.btnPurple.btn-lg.state.text-uppercase#state(href="/logout" role="button") Logout 
